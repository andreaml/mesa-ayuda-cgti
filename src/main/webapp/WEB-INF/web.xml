<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>CRUD Art√≠culos con JSP y Servlet </display-name>
    <context-param>
        <param-name>jdbcURL</param-name>
        <param-value>jdbc:mysql://andreaml.ddns.net:3306/mesa-ayuda</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcUsername</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcPassword</param-name>
        <param-value>asd123</param-value>
    </context-param>
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>com.ucol.mesa.ayuda.cgti.controller.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VehiculoServlet</servlet-name>
        <servlet-class>com.ucol.mesa.ayuda.cgti.controller.VehiculoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServicioServlet</servlet-name>
        <servlet-class>com.ucol.mesa.ayuda.cgti.controller.ServicioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DependenciaServlet</servlet-name>
        <servlet-class>com.ucol.mesa.ayuda.cgti.controller.DependenciaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EspecialistaServlet</servlet-name>
        <servlet-class>com.ucol.mesa.ayuda.cgti.controller.EspecialistaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtnUsuariosServlet</servlet-name>
        <servlet-class>com.ucol.mesa.ayuda.cgti.controller.AtnUsuariosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BD_ConocimientoServlet</servlet-name>
        <servlet-class>com.ucol.mesa.ayuda.cgti.controller.BD_ConocimientoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VehiculoServlet</servlet-name>
        <url-pattern>/vehiculo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServicioServlet</servlet-name>
        <url-pattern>/servicios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DependenciaServlet</servlet-name>
        <url-pattern>/dependencias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EspecialistaServlet</servlet-name>
        <url-pattern>/especialista</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtnUsuariosServlet</servlet-name>
        <url-pattern>/atencion-usuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BD_ConocimientoServlet</servlet-name>
        <url-pattern>/base-datos-conocimiento</url-pattern>
    </servlet-mapping>
</web-app>
